# Run rofi search emoji: https://github.com/Mange/rofi-emoji with win+e
bindsym $mod+e exec --no-startup-id rofi -modi emoji -show emoji

# Launch email with win+u
bindsym $mod+u exec --no-startup-id google-chrome -new-window https://mail.google.com/mail/u/0/#inbox

# Search for file and open in new terminal with vim, win+v
bindsym $mod+v exec --no-startup-id ~/.config/rofi/scripts/file_finder_vim.sh

# Launch inkdrop with win+g
bindsym $mod+g exec --no-startup-id inkdrop

# Create a draft note by launching ~/Scripts/drafter.sh
bindsym $mod+d exec --no-startup-id kitty --start-as fullscreen -e drafter.sh

# Launch nvitop with win+b
bindsym $mod+b exec --no-startup-id kitty -e nvitop

# Take a screenshot and copy to clipboard with win+m
bindsym $mod+m exec --no-startup-id sh ~/Scripts/screenshot.sh

# Open a random leetcode problem from neetcode.io 150 selected problems
bindsym $mod+z exec --no-startup-id ~/Scripts/randleet.sh
