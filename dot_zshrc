export PATH=$HOME/bin:/usr/local/bin:$PATH
export PATH=$HOME/.local/bin:$PATH

# Path to your oh-my-zsh installation.
export ZSH="/home/fade0329/.oh-my-zsh" 
###############
### ALIASES ###
###############
alias rr="regolith-look refresh"
alias sz="source ~/.zshrc"
# alias sz="exec zsh" #~/.zshrc"
alias ze="vim ~/.zshrc"
alias ve="vim ~/.config/nvim/init.vim"
alias chezupdate="chezmoi add ~/.zshrc && chezmoi add ~/.config/nvim && chezmoi add ~/.config/alacritty && chezmoi add ~/.config/starship.toml"
alias jl="jupyter-lab"
alias brpy="cd ~/brainstorm/Python/"
alias brcpp="cd ~/brainstorm/Cpp/"

###############
### ANTIGEN ###
###############
source ~/antigen.zsh
antigen use oh-my-zsh

antigen bundle git # autocompletions
antigen bundle pip # autocompletions
antigen bundle command-not-found # suggests commands
antigen bundle z # jump around!
antigen bundle colored-man-pages # for reading manual pages, but colored.
antigen bundle zsh-users/zsh-syntax-highlighting
antigen bundle zsh-users/zsh-autosuggestions # use ctrl-f to apply suggestions
antigen bundle thefuck # autocorrect command, use <escape><escape>

antigen apply

source $ZSH/oh-my-zsh.sh

fpath+=${ZDOTDIR:-~}/.zsh_functions

# starship prompt
eval "$(starship init zsh)"
eval $(thefuck --alias fuck)

# for ros2 sourcing
source /opt/ros/galactic/setup.zsh 
